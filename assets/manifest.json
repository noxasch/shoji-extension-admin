{
  "manifest_version": 2,
  "name": "Shoji X",
  "description": "Just playing with chrome API",
  "version": "0.1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "chrome://favicon/",
    "unlimitedStorage",
    "management",
    "notifications"
  ],
  "commands": {
    "Alt+R": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Reload dev extension"
    }
  },
  "offline_enabled": true
}