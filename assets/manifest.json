{
  "manifest_version": 2,
  "name": "Shoji X",
  "description": "Just playing with chrome API",
  "version": "0.1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "chrome://favicon/",
    "unlimitedStorage",
    "management",
    "notifications"
  ],
  "offline_enabled": true
}