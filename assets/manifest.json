{
  "manifest_version": 2,
  "name": "Shoji Extension Admin",
  "description": "Administrate your plugin like a pro",
  "version": "0.12.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "chrome://favicon/",
    "management"
  ],
  "commands": {
    "Alt+R": {
      "suggested_key": {
        "default": "Alt+R"
      },
      "description": "Reload dev extension"
    }
  },
  "offline_enabled": true,
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}