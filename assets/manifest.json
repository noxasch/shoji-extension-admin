{
  "manifest_version": 2,
  "name": "Shoji X",
  "description": "Just playing with chrome API",
  "version": "0.1.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "chrome://favicon/",
    "unlimitedStorage",
    "management",
    "notifications"
  ],
  "icons": {
    "16": "img/icon_16.png",
    "32": "img/icon_32.png",
    "48": "img/icon_48.png",
    "128": "img/icon_128.png"
  },
  "offline_enabled": true
}